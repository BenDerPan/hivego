{
  "routes": [
    { ""        : "./public" }
  ],

  "packages": {
    "hive": {
      "modules" : [
        "es5-shimify", 
        "json2ify", 
        "jqueryify", 
        "momentifycn",
        "jquery-mousewheel",
        "raphaelify",
        "eve",
        "spineify",
        "spineify/lib/local",
        "spineify/lib/ajax",
        "spineify/lib/route",
        "spineify/lib/list",
        "spineify/lib/manager"
      ],
      "paths"  : ["./app"],
      "target" : "./public/js/application.js"
    },
    "css": {
      "paths"  : "./css",
      "target" : "./public/css/application.css"
    }
  }
}
