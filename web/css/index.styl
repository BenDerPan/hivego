@import './mixin'
@import './theme'

.stack
  position: relative
  
.smain > *:not(.active)
    display: none
    
body, html
  margin: 0;
  padding: 0;
  width: 100%
  height: 100%
  background: url(../img/bg.jpg);
  background-attachment: fixed;

body
  vbox()

header#header
  overflow: hidden;
  height: 35px;
  border-box()
  inset-box-shadow(0px, -1px, 3px, #1d1d1d)
  background: #333;
  /*vbg-gradient( #474747, #303030)*/

header#header h1
  line-height: 35px;
  float: left;
  padding: 0 10px;
  font-size: 14px;
  margin: 0;
  color: #FFF;
  cursor: pointer;
  border-right: 1px solid #181818;
  box-shadow(1px, 0px, 1px, #525252)
  text-shadow: 0 -1px 1px black;
  font-weight: bold;

header#header .sinput
  padding: 2px;
  font-size: 14px;
  width: 300px;
  border-radius: 8px;
  margin-top: 5px;
  margin-bottom: 3px;
  

#article
  box-flex(1)
  vbox()

#article .contacts
  box-flex(1)
  hbox()
  
  .sidebar
    width: 300px;
    vbox()
    
    header
      padding: 6px 7px 5px 7px;
      border: 1px solid #c5c5c5;
      border-width: 1px 0 1px 0;
      background: #ffffff;
      vbg-gradient(#ffffff, #dedfe0)

      input
        font-size: 14px;
        width: 100%;    
        
    .items
      box-flex(1)
      overflow-y: scroll
    
    .item
      height: 50px
      padding: 0 15px
      line-height: 50px
      
      border-bottom: 1px solid #d2d2d1;
      color: #333;
      ellipsis()
      
      &.active
        color: #ffffff;
        text-shadow: 0 -1px 1px #46677f;
        vbg-gradient( #7bb5db, #4775b8)
        border-bottom-color: #609fd0;
        inset-box-shadow(0, 2px, 2px, #4775b8)
        
    footer
      padding: 6px;
      border-top: 1px solid #c5c5c5;
      vbg-gradient(#ffffff, #dedfe0)
      box-shadow(0, -1px, 2px, rgba(0, 0, 0, 0.1))
      text-align: right;
  
  .main
    vbox()
    box-flex(1)
    
    header
      color: #333333;
      font-weight: bold;
      text-shadow: 0 1px 1px #ffffff;
      font-size: 14px;
      border-bottom: 1px solid rgba(0, 0, 0, 0.3);
      vbg-gradient(#ffffff, #e0e0e1)
      box-shadow(1px, 1px, 2px, rgba(0, 0, 0, 0.1))
      overflow: hidden
      
      a
        float: left;
        line-height: 30px;
        height: 30px;
        padding: 0 20px;
        cursor: pointer;
        border-right: 1px solid rgba(0, 0, 0, 0.3);
        text-decoration: none
        
        &:active
          background: #dadada;
          inset-box-shadow(0, 0, 10px, #9c9c9c)
    
    .content
      box-flex(1)
      inset-box-shadow(1px, 2px, 2px, rgba(0, 0, 0, 0.1))
      padding: 20px;
      -webkit-user-select: text;


